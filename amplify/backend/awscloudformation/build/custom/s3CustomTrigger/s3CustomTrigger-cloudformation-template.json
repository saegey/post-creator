{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "bucketName": {
      "Type": "String"
    }
  },
  "Resources": {
    "CustomS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "bucketName"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "s3:GetObject",
              "Effect": "Allow",
              "Resource": {
                "Fn::Sub": "arn:aws:s3:::${bucketName}/*"
              },
              "Principal": "*"
            }
          ]
        }
      }
    },
    "CustomS3TriggerPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": "S3Trigger71ba5706-${env}",
        "Principal": "s3.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "bucketName",
            "Arn"
          ]
        }
      }
    },
    "CustomProcessFitFilePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": "processFitFile-${env}",
        "Principal": "s3.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "bucketName",
            "Arn"
          ]
        }
      }
    },
    "CustomS3Notification": {
      "Type": "Custom::S3BucketNotification",
      "Properties": {
        "ServiceToken": {
          "Fn::GetAtt": [
            "CustomS3NotificationLambda",
            "Arn"
          ]
        },
        "BucketName": {
          "Ref": "bucketName"
        },
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "S3Trigger71ba5706-${env}",
                  "Arn"
                ]
              }
            },
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "processFitFile-${env}",
                  "Arn"
                ]
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "BucketName": {
      "Value": {
        "Ref": "bucketName"
      }
    }
  },
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"12.12.5\",\"stackType\":\"custom-CloudFormation\",\"metadata\":{}}"
}